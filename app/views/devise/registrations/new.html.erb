<%= render "shared/header" %>
<%= render "devise/shared/error_messages", resource: resource %>
 
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自分のニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パートナーのニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :partner_nickname, maxlength: "6" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">付き合った日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-daiting-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :dating_day,
                    class:'select-dating-day',
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1980,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, placeholder:"6文字以上"%>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation,placeholder:"同じパスワードを入力して下さい"%>
  </div>

    <div class="sign-up-btn">
      <%= f.submit "登録", class:"sign-up-red-btn" %>
    </div>
<% end %>

